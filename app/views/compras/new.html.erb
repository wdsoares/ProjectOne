<%= render "navbar/navbar" %>
<div class="container-fluid">
  <div class="row align-items-center justify-content-center vertical-center">
    <div class="col-sm-offset-8 col-sm-8" style="margin-top: 20px">
      <div class="panel panel-default">
        <div class="panel-body">
          <%= bootstrap_form_tag url: '/busca', method: :get do |f| %>
          <%= f.text_field :tituloBusc, name: "tituloBusc", label: "Título da publicação", label_class: "white-text", placeholder: 'Ex: Sistemas Operacionais Modernos - A. Tanenbaum' %>
          <%= f.submit "Buscar", class: "btn btn-block btn-lg btn-danger-home active" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>