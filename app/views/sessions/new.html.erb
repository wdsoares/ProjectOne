<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-offset-8 col-sm-6" style="margin-top: 100px">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          <h2 style="color:#ffffff; font-family: Harabara Mais, Geneva, sans-serif;">Iniciar nova sess√£o</h2>
        </div>
          <div class="panel-body">
            <%= bootstrap_form_for(:user, label_errors: true) do |f| %>
              <%= f.email_field :email, label:"Email", label_as_placeholder: "true", label_class:"white-text", class: "input-lg" %>
              <%= f.password_field :password,label:"Senha", label_as_placeholder: "true", label_class:"white-text", class: "input-lg" %>
              <%= f.submit "Login", class: "btn btn-block btn-lg btn-danger2" %>
            <% end %><br>
            <%= link_to "Cadastrar", signup_path, class:"btn btn-block btn-sm btn-light" %><br>
            <p id="alert" style="color: white;"><%= alert %></p>
        </div>
      </div>
    </div>
  </div>
</div>