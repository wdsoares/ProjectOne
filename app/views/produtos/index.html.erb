<%= render "navbar/navbar"%>
<div class="container-fluid">
	<div class="row justify-content-center">
		<div class="col-md-12">
        <h2 style="color:white; font-family: Harabara Mais, Helvetica, sans-serif; margin-top: 20px;">Meus Anúncios</h2>
            <div class="panel panel-default" style="margin-top: 25px;">
                <div class = "panel-body">
                    <table class="table table-striped table-hover table-sm">
                        <thead>
                            <tr>
                                <th style = "color: white;">
                                    <%= image_tag "camera.png", size: "25x20", style: "margin-left: 35px;"  %>
                                </th>
                                <th style = "color: white;">
                                    Título
                                </th>
                                <th style = "color: white;">
                                    Autores
                                </th>
                                <th style = "color: white;">
                                    Data Publicação
                                </th>
                                <th style = "color: white;">
                                    Editora
                                </th>
                                <th style = "color: white;">
                                    Ações
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @produto.each do |produto| %>   
                            <% Produtoimagem.where(:produto_id => produto.id).find do |image| %>
                            <tr>
                                    <td style="color:white;"><%= image_tag(image.imagem.thumb.url) %></td>
                                    <td style="color:white;"><%= produto.titulo %></td>
                                    <td style="color:white;"><%= produto.autores %></td>
                                    <td style="color:white;"><%= produto.data_pub %></td>
                                    <td style="color:white;"><%= produto.editora %></td>
                                    <td style="color:white;"><%= link_to 'Destroy', {:controller=>:produtos,:action=>:destroy, :id=>produto}, method: :delete, data: { confirm: 'Você tem certeza disso?' } %></td>
                                </tr>
                            <% end %>
                            <% end %>
                        </tbody>
                    </table>
                    <p id="notice"><%= notice %></p>
                    <%= link_to "Voltar", home_path, class:"btn btn-sm btn-danger-home active" %>
                </div>
            </div>
		</div>
	</div>
</div>